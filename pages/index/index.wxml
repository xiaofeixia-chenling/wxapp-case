<swiper class="section hero" indicator-dots="{{true}}">
  <block wx:for="{{slides}}" wx:key="id">
    <swiper-item> 
      <image src="{{item.image}}" mode="ascpectFill" />
      <view class="content">
        <view class="sub-header">{{item.sub_header}}</view>
        <view class="header"></view>
        <view class="decription">{{item.description}}</view>
        <view class="action">
          <button class="button">预约试驾</button>
          <button class="button primary">了解更多</button>
        </view>
      </view>
    </swiper-item>
  </block>
</swiper>